<body>
    <h1>Carrito de Compra - ID: {{cart._id}}</h1>

    {{#if cart.products.length}}
        <ul>
            {{#each cart.products}}
                <li>
                    Producto: {{product.title}} -
                    Precio: ${{product.price}} -
                    Cantidad: {{quantity}}
                </li>
            {{/each}}
        </ul>
    {{else}}
        <p>No hay productos en este carrito.</p>
    {{/if}}

</body>
